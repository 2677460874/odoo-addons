<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="0">

    <record id="base_security.group_partners_only" model="res.groups">
        <field name="name">Partners / User - Only</field>
    </record>
    <record id="base_security.group_partners_all" model="res.groups">
        <field name="name">Partners / User - All</field>
    </record>

    <record model="ir.ui.menu" id="base.menu_base_partner">
        <field eval="[(4, ref('base_security.group_partners_only'))]" name="groups_id"/>
    </record>

<!-- Multi - User Partners assignation rules -->
    
    <record id="contact_personal_rule" model="ir.rule">
        <field name="name">Personal contacts</field>
        <field ref="model_res_partner_contact" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('base_security.group_partners_only'))]"/>
    </record>
	<record id="contact_all_rule" model="ir.rule">
        <field name="name">All contacts</field>
        <field ref="model_res_partner_contact" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('base_security.group_partners_all'))]"/>
    </record>

    <record id="partner_personal_rule" model="ir.rule">
        <field name="name">Personal partners</field>
        <field ref="base.model_res_partner" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('base_security.group_partners_only'))]"/>
    </record>
	<record id="partner_all_rule" model="ir.rule">
        <field name="name">All partners</field>
        <field ref="base.model_res_partner" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('base_security.group_partners_all'))]"/>
    </record>
</data>
</openerp>
