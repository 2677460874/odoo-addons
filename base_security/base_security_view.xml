<?xml version="1.0"?>
<openerp>
	<data>
        <!--
Alter partner_contact forms
    -->
		
		<record id="view_partner_contact_tree_inherit" model="ir.ui.view">
			<field name="name">res.partner.contact.tree.inherit</field>
			<field name="model">res.partner.contact</field>
			<field name="inherit_id" ref="base_contact.view_partner_contact_tree" />
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<field name="partner_id" position="after">
                    <field name="user_id" select = "1"/>
				</field>
			</field>
		</record>

		<record id="view_partner_contact_form_inherit" model="ir.ui.view">
			<field name="name">res.partner.contact.form.inherit</field>
			<field name="model">res.partner.contact</field>
			<field name="inherit_id" ref="base_contact.view_partner_contact_form" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<field name="partner_id" position="after">
                    <field name="user_id" select = "1"/>
				</field>
			</field>
		</record>

		<record id="view_partner_contact_search_inherit" model="ir.ui.view">
			<field name="name">res.partner.contact.search.inherit</field>
			<field name="model">res.partner.contact</field>
			<field name="inherit_id" ref="base_contact.view_partner_contact_search" />
			<field name="type">search</field>
			<field name="arch" type="xml">
				<field name="partner_id" position="after">
                    <field name="user_id" select = "1"/>
				</field>
			</field>
		</record>


	</data>
</openerp>
