<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		  <record id="purchase_order_line_search_apem" model="ir.ui.view">
            <field name="name">purchase.order.line.search.apem</field>
            <field name="model">purchase.order.line</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_search" />
            <field name="arch" type="xml">
				<xpath expr="/search/group/field[@name='order_id']" position="before">
					
                       <filter icon="terp-document-new" name="draft" string="Draft" domain="[('state','=','draft')]" separator="1" />
                       <filter icon="terp-check" name="order" string="Order" domain="[('state','&lt;&gt;','draft')]" separator="1" />
				</xpath>
			</field>
		 </record>

	     <record id="purchase_order_lines.action_order_line_tree1" model="ir.actions.act_window">
            <field name="name">PO Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="purchase.purchase_order_line_tree"/>
            <field name="search_view_id" ref="purchase.purchase_order_line_search"/>
            <field name="context">{'search_default_order': 1}</field>
        </record>

    </data>
</openerp>
