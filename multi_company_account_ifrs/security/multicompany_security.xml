<?xml version="1.0"?>
<openerp>
	<data>
	
		<!-- Copyright 2010 Eric Caudal -->
		<!--
		Security rules
		-->
	
	        <record id="acc_type_mcifrs_comp_rule_group" model="ir.rule.group">
	            <field name="name">Account type</field>
	            <field model="ir.model" name="model_id" search="[('model','=','account.account.type')]"/>
	            <field eval="True" name="global"/>
	        </record>
	        <record id="acc_type_mcifrs_comp_rule" model="ir.rule">
	            <field model="ir.model.fields" name="field_id" search="[('model','=','account.account.type'),('name','=','company_id')]"/>
	            <field name="operator">child_of</field>
	            <field name="operand">user.company_id.id</field>
	            <field name="rule_group" ref="acc_type_mcifrs_comp_rule_group"/>
	        </record>
	
	        <record id="res_report_mcifrs_comp_rule_group" model="ir.rule.group">
	            <field name="name">Account Reports' Attribute</field>
	            <field model="ir.model" name="model_id" search="[('model','=','res.report.attribute')]"/>
	            <field eval="True" name="global"/>
	        </record>
	        <record id="res_report_mcifrs_comp_rule" model="ir.rule">
	            <field model="ir.model.fields" name="field_id" search="[('model','=','res.report.attribute'),('name','=','company_id')]"/>
	            <field name="operator">child_of</field>
	            <field name="operand">user.company_id.id</field>
	            <field name="rule_group" ref="res_report_mcifrs_comp_rule_group"/>
	        </record>
	
	</data>
</openerp>
